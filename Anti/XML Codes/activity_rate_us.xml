<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p1"
    android:gravity="center_horizontal"
    android:padding="20dp">


    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/l1"
        android:contentDescription="Antiquora Logo" />

    <TextView
        android:id="@+id/rateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RATE ANTIQUORA"
        android:textColor="#EEDBA8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginTop="8dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:layout_marginTop="24dp"
        android:progressTint="#F4D507"
        android:secondaryProgressTint="#FFD700"
        android:indeterminateTint="#FFD700"
        android:theme="@style/RatingBarGoldTheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/paper"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:id="@+id/feedbackInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="serif"
            android:hint="Tell us what you think..."
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="#3E2C17"
            android:textColorHint="#A08355"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitRating"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6B4A25"
        android:fontFamily="serif"
        android:text="SUBMIT RATING"
        android:textAllCaps="true"
        android:textColor="#F1E3B2"
        android:textStyle="bold" />
</LinearLayout>
