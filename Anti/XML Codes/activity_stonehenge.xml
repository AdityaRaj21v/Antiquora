<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C2622">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/stone"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stonehenge"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Wiltshire, England"
                android:textColor="#D5D5D5"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stonehenge is a prehistoric monument located on Salisbury Plain in Wiltshire, England. Comprising a ring of massive standing stones, each around 13 feet high, 7 feet wide, and weighing about 25 tons, it was built between 3000 and 2000 BC. Its purpose remains one of the greatest mysteries of archaeology, believed to be connected to astronomy, religion, or seasonal ceremonies."
                android:textColor="#CFCFCF"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/s_a"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/s_b"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/s_c"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corners"
                    android:clipToOutline="true"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Construction of Stonehenge took place in several stages, starting around 3000 BC with an earthwork enclosure and wooden posts. The massive sarsen stones and smaller bluestones were later transported from distant regions, including Wales. Archaeological evidence suggests that the site served as a burial ground and a place for ritual gatherings over thousands of years."
                android:textColor="#CFCFCF"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Structure and Design"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stonehenge consists of a circular arrangement of large standing stones topped by horizontal lintels. The alignment of the stones with the solstices suggests advanced understanding of astronomy by Neolithic builders. The engineering skill required to transport and erect these massive stones remains a testament to prehistoric innovation."
                android:textColor="#CFCFCF"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visiting Information"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Open: 9:30 AM â€“ 7:00 PM (Seasonal hours vary)\nâ€¢ Entry Fee: Â£23.60 (Adults), Â£14.10 (Children)\nâ€¢ Best Time: Summer Solstice for sunrise alignment\nâ€¢ Tip: Book tickets in advance as slots can fill up quickly during peak season."
                android:textColor="#CFCFCF"
                android:textSize="15sp"
                android:layout_marginBottom="80dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_360_view_stonehenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        app:backgroundTint="#E8D17E"
        android:src="@drawable/location"
        android:contentDescription="360 View" />
</FrameLayout>
