                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Architecture"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Made of wrought iron, the Eiffel Tower weighs around 10,100 tons and consists of over 18,000 metal parts connected by 2.5 million rivets. Its lattice design provides both strength and elegance, making it an engineering masterpiece of the 19th century."
